<div class="h-screen flex overflow-hidden bg-gray-200">
  <!-- Sidebar -->
  <div
    class="absolute md:relative bg-gray-800 text-white w-56 min-h-screen overflow-y-auto transition-transform transform -translate-x-full md:translate-x-0 ease-in-out duration-300"
    id="sidebar"
  >
    <!-- Sidebar Content -->
    <div class="p-4 space-y-4">
      <!-- Dashboard Title -->
      <h1 class="text-xl font-semibold text-white border-b pb-3">Dashboard</h1>

      <!-- Navigation Links -->
      <ul class="space-y-3">
        <li>
          <a
            href="/home"
            class="flex items-center p-2 rounded-lg hover:bg-indigo-600 hover:text-white transition duration-200 ease-in-out"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 mr-3"
              viewBox="0 0 24 24"
            >
              <path
                fill="currentColor"
                fill-rule="evenodd"
                d="M11.293 3.293a1 1 0 0 1 1.414 0l6 6l2 2a1 1 0 0 1-1.414 1.414L19 12.414V19a2 2 0 0 1-2 2h-3a1 1 0 0 1-1-1v-3h-2v3a1 1 0 0 1-1 1H7a2 2 0 0 1-2-2v-6.586l-.293.293a1 1 0 0 1-1.414-1.414l2-2z"
                clip-rule="evenodd"
              />
            </svg>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a
            href="/vouchers"
            class="flex items-center p-2 rounded-lg hover:bg-indigo-600 hover:text-white transition duration-200 ease-in-out"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 mr-3"
              viewBox="0 0 24 24"
            >
              <path
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                d="M16 7h3v4h-3zm-7 8h11M9 11h4M9 7h4M6 18.5a2.5 2.5 0 1 1-5 0V7h5.025M6 18.5V3h17v15.5a2.5 2.5 0 0 1-2.5 2.5h-17"
              />
            </svg>
            <span>Vouchers</span>
          </a>
        </li>
        <li>
          <a
            href="/settings"
            class="flex items-center p-2 rounded-lg bg-indigo-600 hover:text-white transition duration-200 ease-in-out"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 mr-3"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M10.343 3.94c.09-.542.56-.94 1.11-.94h1.093c.55 0 1.02.398 1.11.94l.149.894c.07.424.384.764.78.93.398.164.855.142 1.205-.108l.737-.527a1.125 1.125 0 0 1 1.45.12l.773.774c.39.389.44 1.002.12 1.45l-.527.737c-.25.35-.272.806-.107 1.204.165.397.505.71.93.78l.893.15c.543.09.94.559.94 1.109v1.094c0 .55-.397 1.02-.94 1.11l-.894.149c-.424.07-.764.383-.929.78-.165.398-.143.854.107 1.204l.527.738c.32.447.269 1.06-.12 1.45l-.774.773a1.125 1.125 0 0 1-1.449.12l-.738-.527c-.35-.25-.806-.272-1.203-.107-.398.165-.71.505-.781.929l-.149.894c-.09.542-.56.94-1.11.94h-1.094c-.55 0-1.019-.398-1.11-.94l-.148-.894c-.071-.424-.384-.764-.781-.93-.398-.164-.854-.142-1.204.108l-.738.527c-.447.32-1.06.269-1.45-.12l-.773-.774a1.125 1.125 0 0 1-.12-1.45l.527-.737c.25-.35.272-.806.108-1.204-.165-.397-.506-.71-.93-.78l-.894-.15c-.542-.09-.94-.56-.94-1.109v-1.094c0-.55.398-1.02.94-1.11l.894-.149c.424-.07.765-.383.93-.78.165-.398.143-.854-.108-1.204l-.526-.738a1.125 1.125 0 0 1 .12-1.45l.773-.773a1.125 1.125 0 0 1 1.45-.12l.737.527c.35.25.807.272 1.204.107.397-.165.71-.505.78-.929l.15-.894Z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
              />
            </svg>
            <span>Settings</span>
          </a>
        </li>
        <li>
          <a
            href="/logout"
            class="flex items-center p-2 rounded-lg hover:bg-indigo-600 hover:text-white transition duration-200 ease-in-out"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="group-hover:hidden h-6 w-6 mr-2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
              />
            </svg>
            <span>Logout</span>
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Content -->
  <div class="flex-1 flex flex-col overflow-auto">
    <!-- Navbar -->
    <div class="bg-white shadow min-h-14 border-b">
      <div class="container mx-auto">
        <div class="flex justify-between items-center py-4 px-2">
          <h1 class="text-xl font-semibold"></h1>
          <button
            class="text-gray-500 hover:text-gray-600 md:hidden"
            id="open-sidebar"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Content Body -->
    <div class="max-w-screen-lg border m-5 ">
      <div class="grid grid-cols-1 p-5 md:grid-cols-12">
        <form class="md:col-span-8 px-10 border border-black p-5 rounded-md" action="/settings" method="POST">
          <div id="successMessage" class="w-full">
            <% if (success) { %>
            <p
              class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6"
            >
              <%= success %>
            </p>
            <% } %>
          </div>
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full md:w-1/2 px-3 mb-6">
              <div class="flex items-center space-x-4">
                <label
                  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-0 flex-shrink-0 whitespace-nowrap"
                  for="title"
                >
                  Title:
                </label>
                <input
                  class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="title"
                  type="text"
                  name="title"
                  value="<%= data.title || '' %>"
                />
              </div>
              <% if (errors.title) { %>
              <p class="text-red-500 text-xs italic mt-2">
                <%= errors.title %>
              </p>
              <% } %>
            </div>

            <div class="w-full md:w-1/2 px-3 mb-6">
              <div class="flex items-center space-x-4">
                <label
                  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-0 flex-shrink-0 whitespace-nowrap"
                  for="title-size"
                >
                  Title size:
                </label>
                <input
                  class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="title-size"
                  type="number"
                  name="titleSize"
                  min="1"
                  max="100"
                  value="<%= data.titleSize || 0 %>"
                />
              </div>
              <% if (errors.titleSize) { %>
              <p class="text-red-500 text-xs italic mt-2">
                <%= errors.titleSize %>
              </p>
              <% } %>
            </div>

            <div class="w-full md:w-1/2 px-3 mb-6">
              <div class="flex items-center space-x-4">
                <label
                  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-0 flex-shrink-0 whitespace-nowrap"
                  for="voucher-width"
                >
                  Voucher width:
                </label>
                <input
                  class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="voucher-width"
                  type="number"
                  min="1"
                  max="100"
                  name="voucherWidth"
                  value="<%= data.voucherWidth || 0 %>"
                />
              </div>
              <% if (errors.voucherWidth) { %>
              <p class="text-red-500 text-xs italic mt-2">
                <%= errors.voucherWidth %>
              </p>
              <% } %>
            </div>

            <div class="w-full md:w-1/2 px-3 mb-6">
              <div class="flex items-center space-x-4">
                <label
                  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-0 flex-shrink-0 whitespace-nowrap"
                  for="voucher-height"
                >
                  Voucher height:
                </label>
                <input
                  class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="voucher-height"
                  type="number"
                  name="voucherHeight"
                  min="1"
                  max="100"
                  value="<%= data.voucherHeight || 0 %>"
                />
              </div>
              <% if (errors.voucherHeight) { %>
              <p class="text-red-500 text-xs italic mt-2">
                <%= errors.voucherHeight %>
              </p>
              <% } %>
            </div>

            <div class="w-full md:w-1/2 px-3 mb-6">
              <div class="flex items-center space-x-4">
                <label
                  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-0 flex-shrink-0 whitespace-nowrap"
                  for="text-size"
                >
                  Text size:
                </label>
                <input
                  class="appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="text-size"
                  type="number"
                  name="textSize"
                  min="1"
                  max="100"
                  value="<%= data.textSize || 0 %>"
                />
              </div>
              <% if (errors.textSize) { %>
              <p class="text-red-500 text-xs italic mt-2">
                <%= errors.textSize %>
              </p>
              <% } %>
            </div>
          </div>
          <div class="flex justify-end w-full px-3">
            <button
              class="inline-flex items-center rounded-md border border-transparent bg-gray-800 px-4 py-3 text-sm font-medium leading-4 text-white shadow-sm hover:bg-gray-900"
              type="submit"
            >
              Update
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  setTimeout(function () {
    const successMessage = document.getElementById("successMessage");
    if (successMessage) {
      successMessage.style.display = "none";
    }
  }, 3000);
</script>
