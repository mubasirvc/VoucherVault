  <!-- Content -->
  <div class="flex-1 flex flex-col overflow-auto">
    <!-- Navbar -->
    <div class="bg-white shadow min-h-14 border-b">
      <div class="container mx-auto">
        <div class="flex justify-between items-center py-4 px-2">
          <h1 class="text-xl font-semibold"></h1>
          <button
            class="text-gray-500 hover:text-gray-600 md:hidden"
            id="open-sidebar"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Content Body -->
    <div class="max-w-md p-5 ml-auto mr-8">
      <h1 class="text-3xl font-normal mb-4 mt-6">Create new voucher</h1>
      <form action="/vouchers" method="post">
        <label for="date">Select a expiry date</label>
        <div class="flex gap-3">
          <input
            required
            id="date"
            min=""
            type="datetime-local"
            name="expiryDate"
            placeholder="date time"
            class="flex px-3 py-2 md:px-4 md:py-3 border border-black rounded-lg font-medium placeholder:font-normal"
          />

          <button
            type="submit"
            class="inline-flex items-center rounded-md border border-transparent bg-gray-800 px-3 py-2 text-sm font-medium leading-4 text-white shadow-sm hover:bg-gray-900"
          >
            Submit
          </button>
        </div>
        <% if (error) { %>
        <p id="dateError" class="text-red-500 text-md mt-2"><%= error %></p>
        <% } %>
      </form>
    </div>

    <div>
      <h1 class="text-4xl font-normal mb-6 mt-10 text-center">
        List of Vouchers
      </h1>

      <div
        class="p-4 flex flex-wrap justify-center gap-4 max-w-full overflow-y-auto"
        style="max-height: 80vh"
      >
        <% vouchers.forEach(function(voucher) { %>
        <a
          class="flex flex-col items-center p-4 border border-indigo-300 rounded-2xl hover:shadow-xl hover:shadow-indigo-50"
          href="#"
          style="width: 250px; box-sizing: border-box"
        >
          <img
            src="<%= voucher.qrCode %>"
            alt="QR Code"
            class="shadow rounded-lg overflow-hidden border w-full"
          />
          <div class="mt-4 text-center">
            <h4 class="font-bold text-lg">Voucher Code: <%= voucher.code %></h4>
            <p class="mt-2 text-gray-600">
              Generated At: <%= voucher.generatedAt.toLocaleString() %>
            </p>
            <p class="mt-2 text-gray-600">
              Expiry Date: <%= voucher.expiryDate.toLocaleString() %>
            </p>
            <button
              type="button"
              class="mt-2 inline-flex items-center rounded-md border border-transparent bg-gray-800 px-3 py-2 text-sm font-medium leading-4 text-white shadow-sm hover:bg-gray-900"
              onclick="previewVoucherPdf('<%= voucher.id %>')"
            >
              View as PDF
            </button>
          </div>
        </a>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<script>
  function previewVoucherPdf(voucherId) {
    const url = `/voucher/generate_pdf/${voucherId}`;
    window.open(url, "_blank");
  }

  setTimeout(function () {
    const dateError = document.getElementById("dateError");
    if (dateError) {
      dateError.style.display = "none";
    }
  }, 3000);

  const now = new Date();
  const year = now.getFullYear();
  const month = String(now.getMonth() + 1).padStart(2, "0");
  const day = String(now.getDate()).padStart(2, "0");
  const hours = String(now.getHours()).padStart(2, "0");
  const minutes = String(now.getMinutes()).padStart(2, "0");

  const minDateTime = `${year}-${month}-${day}T${hours}:${minutes}`;

  document.getElementById("date").setAttribute("min", minDateTime);
</script>
